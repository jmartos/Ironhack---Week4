<h3>Add a concert</h3>
<%= form_for @concert do|f| %>
  <%= f.label :artist %>
  <%= f.text_field :artist %>

  <%= f.label :venue %>
  <%= f.text_field :venue %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :date %>
  <%= f.date_field :date %>

  <%= f.label :price %>
  <%= f.number_field :price %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.button %>
<% end %>

<% if @concert.errors.present? %>
  <ul>
    <% @concert.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<br>