<h3>Add a comment</h3>
<%= form_for [@concert, @post] do|f| %>
  <%= f.label :author %>
  <%= f.text_field :author %>

  <%= f.label :comment %>
  <%= f.text_area :comment %>

  <%= f.button %>
<% end %>

<% if @post.errors.present? %>
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<br>
<%= link_to "home", root_path %>
